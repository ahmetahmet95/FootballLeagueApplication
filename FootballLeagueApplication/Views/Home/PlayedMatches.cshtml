@{
    ViewData["Title"] = "Played Matches";
}
<h1>@ViewData["Title"]</h1>
<br></br>
<button type="button" id="playedMatchesCreateBtn" class="btn btn-outline-primary">Create</button>
<hr></hr>

<div class="loading-bar"></div>

<table id="table1" class="table table-bordered table table-condensed table-responsive">
    <thead>
        <tr>
            <th class="th">Home Team</th>
            <th class="th">Guest Team</th>
            <th class="th">Home Team Score</th>
            <th class="th">Guest Team Score</th>
            <th class="th">Year</th>
            <th class="th">Operations</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>



@section Styles{
    <style>
        .loading-bar {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-image: url('http://i.stack.imgur.com/FhHRx.gif');
            background-position: 50% 50%;
            background-color: rgba(255, 255, 255, 1.0);
            background-repeat: no-repeat;
        }

        body.loading {
            overflow: hidden;
        }

            body.loading .loading-bar {
                display: block;
            }
    </style>
}


    @section Scripts{

    <script src="~/js/PlayedMatchesScript.js"></script>

    <script>

        jQuery(document).ready(function () {
            scriptApp.init();

        });


    </script>
    }