@{
    ViewData["Title"] = "Teams";
}
<h1>@ViewData["Title"]</h1>
<br></br>

<button type="button" id="teamCreateBtn" class="btn btn-outline-info">
    <i class="fa fa-plus-square" aria-hidden="true"></i>
    Create
</button>

<hr></hr>
<div class="loading-bar"></div>
<table id="table1" class="table table-bordered table table-condensed table-responsive">
    <thead>
        <tr>
            <th class="th">Name</th>
            <th class="th">Group</th>
            <th class="th">Operations</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section Styles{
    <style>
        .loading-bar {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-image: url('http://i.stack.imgur.com/FhHRx.gif');
            background-position: 50% 50%;
            background-color: rgba(255, 255, 255, 1.0);
            background-repeat: no-repeat;
        }

        body.loading {
            overflow: hidden;
        }

        body.loading .loading-bar {
            display: block;
        }

        th:first-child {
            width: 50%
        }

        th:nth-child(2) {
            width: 30%
        }
        {}
    </style>
}

    @section Scripts{

    <script src="~/js/TeamsScript.js"></script>

    <script>

        jQuery(document).ready(function () {
            scriptApp.init();

        });
        
       
    </script>
    }